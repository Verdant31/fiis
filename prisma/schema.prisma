generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mongodb"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id String @id @map("_id")

  email         String    @unique
  password_hash String
  sessions      Session[]
}

model Session {
  id        String   @id @map("_id")
  userId    String
  expiresAt DateTime

  user User @relation(references: [id], fields: [userId], onDelete: Cascade)
}

model FiisPurchases {
  id             String @id @default(auto()) @map("_id") @db.ObjectId
  fiiName        String @unique
  purchaseDate   String
  qty            Int
  quotationValue Float  @default(0)
  pvp            Float? @default(0)
  initialValue   Float  @default(0)
}

model Payment {
  id                         String @id @default(auto()) @map("_id") @db.ObjectId
  date                       String
  fiiName                    String
  quotationAtPayment         Float
  monthlyYield               Float
  paidPerQuote               Float
  quotesQuantityAtThePayment Int
  pvpAtPayment               Float?
}
