// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mongodb"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id String @id @map("_id")

  email         String    @unique
  password_hash String
  sessions      Session[]
}

model Session {
  id        String   @id @map("_id")
  userId    String
  expiresAt DateTime

  user User @relation(references: [id], fields: [userId], onDelete: Cascade)
}

model FiisOperations {
  id             String    @id @default(auto()) @map("_id") @db.ObjectId
  fiiName        String    @unique
  fiiCnpj        String
  date           String
  type           Operation @default(sale)
  qty            Int
  quotationValue Float     @default(0)
  pvp            Float?    @default(0)
}

enum Operation {
  purchase
  sale
}

model ExtraFiisInfos {
  id                  String   @id @default(auto()) @map("_id") @db.ObjectId
  fiiCnpj             String   @unique
  annualYield         Float
  totalPatrimony      Float
  sentQuotes          Int
  patrimonyQuoteValue Float
  pvp                 Float
  updatedAt           DateTime @updatedAt
}

model Payment {
  id                         String @id @default(auto()) @map("_id") @db.ObjectId
  date                       String
  fiiName                    String
  quotationAtPayment         Float
  monthlyYield               Float
  paidPerQuote               Float
  quotesQuantityAtThePayment Int
  pvpAtPayment               Float?
}
